---
import Layout from "../../layouts/Layout.astro";
const { slug } = Astro.params;

const matches = import.meta.glob("../../templates/html/**.html", {
  eager: true,
});

// @ts-ignore
const Page = matches[`../../${slug}`]?.default;

const view = Astro.url.searchParams.get("view");
---

<Layout title={slug}>
  <div class={`${view || ""} div bg-base-100 `}>
    {Page && <Page />}
  </div>
</Layout>

<style>
  @import "tailwindcss/theme" theme(reference);
  .div {
    height: 100%;
    flex-shrink: 0;
    margin-inline: auto;
    width: 100%;
  }
  .mobile {
    @apply shadow-xl rounded-lg border;
    width: 360px;
    border-color: var(--color-base-300);
  }
</style>
